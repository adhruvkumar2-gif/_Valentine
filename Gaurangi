    <!-- Question Page -->
    <div class="question-page" id="questionPage">
        <div class="container">
            <h1>üíï Be My Valentine? üíï</h1>
            <p class="message">Will you be my Valentine this year?</p>
            <div class="button-container">
                <button id="yesBtn">Yes! üíñ</button>
                <button id="noBtn">No</button>
            </div>
        </div>
    </div>

    <!-- Confirmation Page -->
    <div class="confirmation-page" id="confirmationPage">
        <div class="container">
            <h1>üíù Are You Sure? üíù</h1>
            <p class="message">Are you sure you want to be my Valentine?</p>
            <div class="button-container">
                <button id="confirmYesBtn">Yes, I'm Sure! üíñ</button>
            </div>
        </div>
    </div>

    <!-- Task Page -->
    <div class="task-page" id="taskPage">
        <div class="container">
            <h1>üíï One Last Thing... üíï</h1>
            <p class="message">Please complete this task:</p>
            <div class="task-box">
                <p class="task-instruction">Say "I Love You Dhruv" at least 3 times</p>
                <p class="task-hint">üì¢ Say it out loud!</p>
            </div>
            <div class="button-container">
                <button id="taskDoneBtn">Yes, I Have Done The Task! ‚úÖ</button>
            </div>
        </div>
    </div>

    <!-- Celebration Page -->
    <div class="celebration-page" id="celebrationPage">
        <div class="celebration-container">
            <h1 class="celebration-title">üéâ Happy Valentine's Day GORU, NANNU, GUNGUN, BACHE! üíù</h1>
            <div class="emoji">üòç</div>
            <div class="emoji">üíï</div>
            <div class="emoji">ü•∞</div>
            
            <!-- Couple Photo Centered -->
            <div class="image-container">
                <img src="d/Screenshot 2025-07-30 003343.png"
                     alt="Our Photo"
                     class="couple-image"
                     id="couplePhoto">
            </div>
            
            <p class="celebration-message">
                You said YES! üéä<br>
                üíñ I Love You Beta<br>
                I just love you, the way you take care of me, your nature, tackle all the problems, You are the Strongest Girl Mere Bache üíë, My STRONG GURL
            </p>
        </div>
    </div>

    <script>
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const confirmYesBtn = document.getElementById('confirmYesBtn');
        const taskDoneBtn = document.getElementById('taskDoneBtn');
        const questionPage = document.getElementById('questionPage');
        const confirmationPage = document.getElementById('confirmationPage');
        const taskPage = document.getElementById('taskPage');
        const celebrationPage = document.getElementById('celebrationPage');
        const buttonContainer = document.querySelector('.button-container');

        // Create floating hearts
        function createHeart() {
            const heart = document.createElement('div');
            heart.className = 'heart';
            heart.textContent = 'üíï';
            heart.style.left = Math.random() * 100 + '%';
            heart.style.animationDuration = (Math.random() * 5 + 5) + 's';
            heart.style.animationDelay = Math.random() * 5 + 's';
            questionPage.appendChild(heart);
            
            setTimeout(() => heart.remove(), 15000);
        }

        // Create hearts for other pages
        function createHeartForPage(page) {
            const heart = document.createElement('div');
            heart.className = 'heart';
            heart.textContent = 'üíï';
            heart.style.left = Math.random() * 100 + '%';
            heart.style.animationDuration = (Math.random() * 5 + 5) + 's';
            heart.style.animationDelay = Math.random() * 5 + 's';
            page.appendChild(heart);
            
            setTimeout(() => heart.remove(), 15000);
        }

        // Create hearts periodically
        setInterval(createHeart, 300);

        // Create confetti for celebration page
        function createConfetti() {
            const colors = ['#ff1744', '#f50057', '#ff4081', '#ffc107', '#00e676'];
            const confetti = document.createElement('div');
            confetti.className = 'confetti';
            confetti.style.left = Math.random() * 100 + '%';
            confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
            confetti.style.animationDuration = (Math.random() * 2 + 2) + 's';
            confetti.style.animationDelay = Math.random() * 2 + 's';
            celebrationPage.appendChild(confetti);
            
            setTimeout(() => confetti.remove(), 5000);
        }

        // Create party poppers
        function createPartyPopper(x, y) {
            const popper = document.createElement('div');
            popper.className = 'party-popper';
            popper.textContent = 'üéâ';
            popper.style.left = x + '%';
            popper.style.top = y + '%';
            celebrationPage.appendChild(popper);
            
            setTimeout(() => popper.remove(), 1000);
        }

        // Trigger party poppers burst
        function triggerPartyPoppers() {
            // Create multiple poppers at different positions
            const positions = [
                [10, 20], [20, 30], [30, 15], [40, 25],
                [60, 15], [70, 25], [80, 20], [90, 30],
                [15, 60], [25, 70], [75, 60], [85, 70],
                [50, 10], [50, 90]
            ];
            
            positions.forEach((pos, index) => {
                setTimeout(() => {
                    createPartyPopper(pos[0], pos[1]);
                }, index * 100);
            });
        }

        // Move "No" button away from cursor
        function moveNoButton() {
            const containerRect = buttonContainer.getBoundingClientRect();
            const btnRect = noBtn.getBoundingClientRect();
            
            // Calculate random position within container
            const maxX = containerRect.width - btnRect.width;
            const maxY = containerRect.height - btnRect.height;
            
            const randomX = Math.random() * maxX - (maxX / 2);
            const randomY = Math.random() * maxY - (maxY / 2);
            
            noBtn.style.transform = `translate(${randomX}px, ${randomY}px)`;
        }

        // Event listeners for "No" button
        noBtn.addEventListener('mouseenter', moveNoButton);
        noBtn.addEventListener('click', (e) => {
            e.preventDefault();
            moveNoButton();
        });

        // Make "No" button move periodically
        const noButtonInterval = setInterval(moveNoButton, 1000);

        // "Yes" button click handler - goes to confirmation page
        yesBtn.addEventListener('click', () => {
            questionPage.style.display = 'none';
            confirmationPage.classList.add('active');
            clearInterval(noButtonInterval);
            
            // Start hearts on confirmation page
            setInterval(() => createHeartForPage(confirmationPage), 300);
            for (let i = 0; i < 15; i++) {
                createHeartForPage(confirmationPage);
            }
        });

        // Confirmation "Yes" button - goes to task page
        confirmYesBtn.addEventListener('click', () => {
            confirmationPage.style.display = 'none';
            taskPage.classList.add('active');
            
            // Start hearts on task page
            setInterval(() => createHeartForPage(taskPage), 300);
            for (let i = 0; i < 15; i++) {
                createHeartForPage(taskPage);
            }
        });

        // Task done button - goes to celebration page
        taskDoneBtn.addEventListener('click', () => {
            taskPage.style.display = 'none';
            celebrationPage.classList.add('active');
            
            // Trigger party poppers immediately
            triggerPartyPoppers();
            
            // Start confetti
            setInterval(createConfetti, 100);
        });

        // Initial hearts
        for (let i = 0; i < 15; i++) {
            createHeart();
        }
    </script>
</body>
</html>
